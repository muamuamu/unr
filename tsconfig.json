{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts", 
    "test/**/*.ts", 
    "examples/**/*.ts", 
    "examples/**/*.vue"
, "scripts/build.js"  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}